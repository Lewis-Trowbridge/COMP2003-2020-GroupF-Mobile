<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="cleanTable_Mobile.Views.BookingPage"
             xmlns:vm="clr-namespace:cleanTable_Mobile.ViewModels" xmlns:sys="clr-namespace:System;assembly=netstandard"
             Title="{Binding Title}">
    
           
    <StackLayout Orientation="Vertical" Padding="30,24,30,24" Spacing="10" IsClippedToBounds="True">

        <Label Text="Booking for Subway" FontSize="16" Padding="0,0,0,0" FontAttributes="Bold" TextColor="Black"/>

        <DatePicker MinimumDate="{x:Static sys:DateTime.Now}" 
                    MaximumDate="12/31/2021" 
                    Format="dd/MM/yyyy" 
                    HorizontalOptions="Start"
                    TextColor="Black"
                    Date="{Binding SelectedDate, Mode=TwoWay}"/>

        <TimePicker x:Name="tpkBookingTime"
                    Format="HH:mm"
                    TextColor="Black"
                    Time="{Binding SelectedTime, Mode=TwoWay}"/>

        <Label x:Name="displayLabel"
               Text="Party Size: " HorizontalOptions="Center" FontAttributes="Bold"
               FontSize="14" TextColor="Black"/>

        <Slider Minimum="0" Maximum="6" 
                MinimumTrackColor="Black" MaximumTrackColor="Black"
                    ValueChanged="OnSliderValueChanged" 
                Value="{Binding NumberOfPeople, Mode=TwoWay}"/>

        <Button Text="Choose Table" HorizontalOptions="Center"
                FontSize="14"
                TextColor="White"
                Command="{Binding TableRequest}"/>
        
        <Picker Title="Choose a Table" TitleColor="Black" TextColor="Black"
                ItemsSource="{Binding TableList}"
                ItemDisplayBinding="{Binding VenueTableNumber}"
                SelectedItem="{Binding SelectedIndexTable, Mode=TwoWay}" 
                
                 />
        
        <Button x:Name="btnSend"
                Text="Complete Booking" HorizontalOptions="Center"
                FontSize="14"
                TextColor="White"
                Command="{Binding SendRequest}">
        </Button>
        <Button x:Name="btnCancel"
                Text="Cancel" HorizontalOptions="Center"
                FontSize="14"
                TextColor="Black"
                BackgroundColor="Red"
                Clicked="ButtonCancel">
        </Button>
    </StackLayout>
           
       
</ContentPage>