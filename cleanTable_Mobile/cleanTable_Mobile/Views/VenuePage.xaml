<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:vm="clr-namespace:cleanTable_Mobile.ViewModels"
             x:Class="cleanTable_Mobile.Views.VenuePage"
             Title="{Binding Title}">
    
    <StackLayout Orientation="Vertical" Padding="30,24,30,24" Spacing="10">
       
        <Label Text="{Binding VenueName}" FontSize="18" Padding="0,0,0,0" HorizontalOptions="Center" FontAttributes="Bold" TextColor="Black"/>
        <Label Text="{Binding VenueAddress}" FontSize="18" Padding="0,0,0,0" HorizontalOptions="Center" FontAttributes="Bold" TextColor="Black"/>
        <Label Text="{Binding TotalCapacity}" FontSize="18" Padding="0,0,0,0" HorizontalOptions="Center" FontAttributes="Bold" TextColor="Black"/>
        
        <Button Margin="0,10,0,0" Text="Book Here"
                     Command="{Binding SendRequest}"
                     BackgroundColor="{StaticResource Primary}"
                     TextColor="White" />
       
        <Button Margin="0,10,0,0" Text="Cancel"
                     Clicked="ButtonCancel"
                     BackgroundColor="{StaticResource Primary}"
                     TextColor="White" />
    </StackLayout>
</ContentPage>